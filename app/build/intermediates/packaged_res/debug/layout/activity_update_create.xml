<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Task Details:"
            android:textStyle="bold"
            android:textColor="#888282"
            android:textSize="35sp"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColor="@color/black"
            android:background="@drawable/rectangle"
            android:padding="6dp"
            android:paddingStart="8dp"
            android:textColorHint="#888282"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="6dp"
            android:paddingStart="8dp"
            android:background="@drawable/rectangle"
            android:hint="Description"
            android:textColorHint="#888282"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDateHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="Select last date for task completion - "
            android:layout_marginTop="16dp"/>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:calendarTextColor="@color/black"
            android:yearListSelectorColor="@color/white"
            android:dayOfWeekBackground="@color/teal_200"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewTimeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select time of task completion -"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:numbersBackgroundColor="@color/black"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:text="Update"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:text="Delete"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
